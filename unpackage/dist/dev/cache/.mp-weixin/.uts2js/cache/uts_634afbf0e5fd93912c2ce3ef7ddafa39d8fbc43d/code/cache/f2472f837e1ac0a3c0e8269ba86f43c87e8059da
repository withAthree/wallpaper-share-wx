{"code":"import { computed } from 'vue';\nimport { isNumber, isString } from '../../../../utils';\nexport const badgeContentTypes = ['number', 'string', 'icon'];\nexport const useBadge = (props, emits) => {\n    // 判断是否需要显示角标\n    const showBadge = computed(() => {\n        return !!props.dot || (props.value !== '' && props.value !== undefined);\n    });\n    // 显示的内容类型\n    const contentType = computed(() => {\n        let type = 'string';\n        if (isNumber(props.value))\n            type = 'number';\n        if (isString(props.value) && props.value.startsWith('icon-'))\n            type = 'icon';\n        return type;\n    });\n    // 显示的内容\n    const content = computed(() => {\n        if (props.dot)\n            return '';\n        if (contentType.value === 'number' && props.max) {\n            const value = Number(props.value || 0);\n            const max = Number(props.max || 0);\n            return value > max ? `${max}+` : `${value}`;\n        }\n        if (contentType.value === 'icon')\n            return props.value.replace('icon-', '');\n        return props.value;\n    });\n    // 角标点击事件\n    const badgeClick = () => {\n        if (emits)\n            emits('click', props.index);\n    };\n    return {\n        showBadge,\n        contentType,\n        content,\n        badgeClick,\n    };\n};\n//# sourceMappingURL=D:/Development/project/wallpaper-share-wx/uni_modules/tuniaoui-vue3/components/badge/src/composables/use-badge.js.map","references":["D:/Development/HBuilderX/plugins/uniapp-cli-vite/node_modules/@vue/runtime-core/dist/runtime-core.d.ts","D:/Development/project/wallpaper-share-wx/uni_modules/tuniaoui-vue3/utils/index.ts","D:/Development/HBuilderX/plugins/uniapp-cli-vite/node_modules/@vue/runtime-core/dist/runtime-core.d.ts","D:/Development/project/wallpaper-share-wx/uni_modules/tuniaoui-vue3/components/badge/src/badge.ts"],"uniExtApis":[],"map":"{\"version\":3,\"file\":\"use-badge.js\",\"sourceRoot\":\"\",\"sources\":[\"use-badge.ts\"],\"n